@using Microsoft.AspNetCore.Http
@model Audit
@{  
    ViewData["Title"] = "Welcome to Press Your Luck!";
}
<h1 class="jumbotron">@ViewData["Title"]</h1>
<div class="col-xs-12 col-sm-6">   
    <p>Please enter your name and the number of coins you have to get started.</p>
    <form asp-controller="Player" asp-action="AddPlayer" method="get" enctype="application/x-www-form-urlencoded">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label for="name" asp-for="PlayerName">Name</label>
            <input type="text" id="name" name="name" asp-for="PlayerName" class="form-control" />
        </div>

        <div class="form-group">
            <label for="totalCoins">Total Coins</label>
            <input id="totalCoins" name="totalCoins" class="form-control" />
        </div>

        <input type="submit" value="Join the Game!" class="btn btn-primary" />
    </form>
</div>


